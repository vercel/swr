{
  "name": "swr-mono",
  "version": "0.0.0",
  "private": true,
  "description": "React Hooks library for remote data fetching",
  "workspaces": [
    "./package"
  ],
  "scripts": {
    "clean": "rimraf package/dist package/infinite/dist package/immutable/dist",
    "build": "yarn build:core && yarn build:infinite && yarn build:immutable",
    "prepublish-swr": "yarn clean && yarn build",
    "build:core": "bunchee core/index.ts --cwd package --no-sourcemap",
    "build:infinite": "bunchee index.ts --cwd package/infinite --no-sourcemap",
    "build:immutable": "bunchee index.ts --cwd package/immutable --no-sourcemap",
    "watch": "yarn npm-run-all -p watch:core watch:infinite watch:immutable",
    "watch:core": "yarn build:core -w",
    "watch:infinite": "yarn build:infinite -w",
    "watch:immutable": "yarn build:immutable -w",
    "publish-swr": "yarn prepublish-swr && yarn workspace swr publish",
    "publish-swr:beta": "yarn workspace swr publish --tag beta",
    "types:check": "tsc --noEmit --project tsconfig.check.json && tsc --noEmit -p test",
    "format": "prettier --write ./**/*.{ts,tsx}",
    "lint": "eslint . --ext .ts,.tsx --cache",
    "lint:fix": "yarn lint --fix",
    "test": "jest --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn types:check"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix --cache",
      "prettier --write",
      "git add"
    ]
  },
  "resolutions": {
    "tslib": "2.3.0"
  },
  "devDependencies": {
    "@swc-node/jest": "1.3.3",
    "@testing-library/jest-dom": "5.14.1",
    "@testing-library/react": "12.0.0",
    "@type-challenges/utils": "0.1.1",
    "@types/react": "17.0.20",
    "@typescript-eslint/eslint-plugin": "5.8.0",
    "@typescript-eslint/parser": "5.8.0",
    "bunchee": "1.8.0",
    "eslint": "8.3.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-jest-dom": "3.9.2",
    "eslint-plugin-react": "7.27.1",
    "eslint-plugin-react-hooks": "4.3.0",
    "eslint-plugin-testing-library": "5.0.0",
    "husky": "2.4.1",
    "jest": "27.0.6",
    "lint-staged": "8.2.1",
    "next": "12.0.8-canary.19",
    "npm-run-all": "4.1.5",
    "prettier": "2.5.0",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-dom-experimental": "npm:react-dom@alpha",
    "react-experimental": "npm:react@alpha",
    "rimraf": "3.0.2",
    "typescript": "4.4.3"
  }
}
